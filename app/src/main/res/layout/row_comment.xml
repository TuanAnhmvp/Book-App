<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp"
    app:contentPadding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageView: profile image of user who commented-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIv"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_gray"
            android:layout_marginEnd="8dp"
            app:shapeAppearanceOverlay="@style/styleCircleImage"
            app:strokeColor="@color/gray01"
            app:strokeWidth="1dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <!--TexView : name of user-->
        <TextView
            android:id="@+id/nameTv"
            android:text="Person Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/profileIv"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@+id/dateTv"
            android:layout_height="wrap_content"/>

        <!--Tv: Date of comment added-->
        <TextView
            android:id="@+id/dateTv"
            android:text="dd//MM/yyy"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray02"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Tv: Comment-->
        <TextView
            android:id="@+id/commentTv"
            android:layout_below="@+id/nameTv"
            android:layout_toEndOf="@+id/profileIv"
            android:layout_width="wrap_content"
            android:text="The comment of the user"
            android:textColor="@color/gray02"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>